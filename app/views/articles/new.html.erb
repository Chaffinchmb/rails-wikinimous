<div class="container">

  <h2>New article</h2>

  <%= simple_form_for(@article) do |f| %>
      <%= f.input :title, label: "Title" %>
      <%= f.input :content, label: "Content" %>
      <%= f.submit value: "Create article", class: "btn btn-secondary" %>
  <% end %>

  <%= link_to "Back", articles_path %>
</div>
